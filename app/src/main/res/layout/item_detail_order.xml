<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginEnd="8dp"
            android:id="@+id/iv_detail_order"
            android:layout_width="86dp"
            android:layout_height="86dp"/>

        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/tv_name_detail_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_detail_order"
            android:text="Pizza A"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_price_detail_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_detail_order"
            android:layout_toRightOf="@id/iv_detail_order"
            android:text="Ä‘45000"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:layout_below="@id/tv_price_detail_order"
            android:layout_toRightOf="@id/iv_detail_order"
            android:id="@+id/tv_quantity_detail_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>