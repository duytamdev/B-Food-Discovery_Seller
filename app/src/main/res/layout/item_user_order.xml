<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="16dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avt_user_order"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="64dp"
            android:layout_height="64dp"/>
        <TextView
            android:id="@+id/tv_name_user_order"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/iv_avt_user_order"
            android:text="Nguyen van A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_phone_number_user_order"
            android:text="078484848"
            android:layout_toRightOf="@id/iv_avt_user_order"
            android:layout_below="@+id/tv_name_user_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Ho Chi Mminh"
            android:textColor="@color/orange"
            android:layout_below="@+id/tv_phone_number_user_order"
            android:layout_toRightOf="@+id/iv_avt_user_order"
            android:id="@+id/tv_location_user_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>